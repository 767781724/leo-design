{
  "env": {
      "browser": true,
      "node": true,
      "es2021": true
  },
  "extends": [
      "plugin:react/recommended",
      "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": [
      "react",
      "@typescript-eslint"
  ],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "camelcase": ["warn", {"properties": "never"}],
    "no-undef": "error",
    "eol-last":"warn",
    "valid-jsdoc": [
      "error",
      { 
          "requireParamType": false,
          "requireParamDescription": false,
          "requireReturnDescription": false,
          "requireReturn": false,
          "prefer": {
              "returns": "return"
          }
      }
    ],
    "max-len": [
      "error",
      { //强制一行的最大长度
          "code": 100,
          "tabWidth": 2,
          "ignoreUrls": true,
          "ignorePattern": "goog.(module|require)"
      }
    ]
  },
  "settings": {
    "react":{
      "version": "detect"
    }
  }
      
}